<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="5dp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_movie_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_movie_title"
        android:text="평점:"
        android:textSize="13sp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/rating"
        android:id="@+id/text_movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rating"
        android:textSize="13sp"
        android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
    <LinearLayout
        android:id="@+id/layout_type"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_rectangle_blue"
        android:layout_gravity="center"
        android:padding="2dp">
        <TextView
            android:id="@+id/text_movie_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Type"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_unregister"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/custom_rectangle_green"
        android:layout_gravity="center"
        android:padding="2dp"
        android:clickable="true"
        android:focusable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반납하기"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_register_complete"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/custom_rectangle_green"
            android:layout_gravity="center"
            android:padding="2dp"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반납완료"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_delete"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/custom_rectangle_pink"
            android:layout_gravity="center"
            android:padding="2dp"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제하기"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>